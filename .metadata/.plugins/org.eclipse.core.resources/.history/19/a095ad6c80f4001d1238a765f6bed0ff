package study03.ascending;

import java.util.Arrays;

public class Descending extends Ascending{

	public Descending(int num) {

		super(num);

	}

	public void cSortMethod() {

		for(int i = 0; i < super.d.length-1; i++) {

			for(int j = i+1; j < super.d.length-i-1; j++) {

				if(super.d[i] > super.d[j]) {

					char temp = super.d[i];
					super.d[i] = super.d[j];
					super.d[j] = temp;

				}

			}

		}

		System.out.println("내림차순");
		System.out.println(Arrays.toString(super.d));

	}

	public void iSortMethod() {

		for(int i = 0; i < d.length-1; i++) {

			for(int j = i+1; j < d.length-i-1; j++) {

				if(a[i] > a[j]) {

					int temp = a[i];
					a[i] = a[j];
					a[j] = temp;

				}

			}

		}

		System.out.println("내림차순");
		System.out.println(Arrays.toString(a));

	}
}